<div class="excel-row">
  <% @translation.each_with_index do |line, index| %>
        <hr/>
        <% if index == 0 %>
            <div class="row-number">
              Header
            </div>
          <% else %>
            <div class="row-number">
              <%= "Row #{index + 1}" %>
            </div>
          <% end %>
      <% line[:content].each do |word| %>
        <% if word.match(@regex)%>
          <xmp class="code text"><%= word %></xmp>
        <% elsif word.start_with?("%") && word.end_with?("%") %>
          <xmp class="code text"><%= word %></xmp>
        <% else %>
          <p class="text"><%= word %></p>
        <% end %>
      <% end %>
  <% end %>
<hr/>
